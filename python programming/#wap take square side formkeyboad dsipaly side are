#wap take salary from keyboad if salary>=5000 da=30% hra=20% then display basic salary da hra and totalsal

print("basic sal ")
sal=float(input())
da,hra=0,0
if sal>=5000:
    da=sal*0.3
    hra=sal*0.2
totalsal=sal+da+hra
print("basic sal=",sal)
print("da=",da)
print("hra=",hra)
print("total sal=",totalsal)


#convert -ve number to +ve number

print("enter a number ")
no=int(input())
if no<0:
    no=-no
print(no)